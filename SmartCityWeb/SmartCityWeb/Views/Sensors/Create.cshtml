@model SmartCityWeb.Models.Sensor

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Sensor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HexaDecimalID" class="control-label" ></label>
                <input asp-for="HexaDecimalID" class="form-control" maxlength="16" minlength="16" value="F3"/>
                <span asp-validation-for="HexaDecimalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreeSort" class="control-label"></label>
                <input asp-for="TreeSort" class="form-control">
                <span asp-validation-for="TreeSort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPSLon" class="control-label"></label>
                <input asp-for="GPSLon" class="form-control" />
                <span asp-validation-for="GPSLon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPSLan" class="control-label"></label>
                <input asp-for="GPSLan" class="form-control" />
                <span asp-validation-for="GPSLan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationID" class="control-label"></label>
                <select asp-for="LocationID" class ="form-control" asp-items="ViewBag.LocationID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

