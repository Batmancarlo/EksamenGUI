@model IEnumerable<SmartCityWeb.Models.Tree>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TreeSort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfTrees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TreeSort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTrees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TreeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TreeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TreeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
